{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "lib": ["es5", "es6", "dom", "dom.iterable", "es2015"],
    "baseUrl": "./src",
    "target": "es6",
    "jsx": "react",
    "moduleResolution": "node",
    "paths": {
      "@screens/*": ["screens/*"],
      "@utils/*": ["utils/*"],
      "@components/*": ["components/*"],
      "@services/*": ["services/*"],
      "@graphql/*": ["graphql-risell/*"]
    }
  }
}
